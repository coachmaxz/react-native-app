{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "." ,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "types": ["react-native", "jest", "node"],
  },
  "exclude": [
    "node_modules",
    "babel.config.ts",
    "metro.config.js",
    "jest.config.js"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}